@language Kirra
@import 'kirra'

namespace communications {
    entities {
    
      entity Member {
        properties {
          property name{type: kirra.StringValue}
        }      
        relationships {
          relationship group { 
            type : Group 
            opposite: Group.members 
          }
        }
      }
      
      entity RegularMember {
        superTypes: Member
      }
      
      entity Manager {
        superTypes: RegularMember
      }
    
    entity Message {
      properties {
        property sent { type: kirra.DateValue }
        property subject { type: kirra.StringValue }
        property memo { type: kirra.StringValue }
      }
      relationships {
        relationship group { type: Group } 
      }
    } 
    
    entity Group {
      properties {
        property name{type: kirra.StringValue}
      }
      relationships {
        relationship members(multiple: true) { type: Member }
      }
      operations {
        operation sendCommunication {
          parameters {
            parameter newCommunication { type: Message }
          }
        }
      }    
    }
  }
}